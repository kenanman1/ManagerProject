@model RegisterViewModel
@{
    ViewBag.Title = "Registration";
}
@section BreadcrumbSection
    {
    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
}
<form class="create-person-form mt-5" method="post" asp-controller="account" asp-action="registration">
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-3 col-form-label">Person Name</label>
        <div class="col-sm-9">
            <input class="form-control capitalize" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3 mt-5">
        <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3 mt-5">
        <label asp-for="Password" class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-9">
            <div class="form-group">
                <input class="form-control" asp-for="Password">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="checkbox-pas" onclick="tooglePassword()">Show Password
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

    </div>
    <div class="row mb-3 mt-5">
        <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label">Confirm Password</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-5">Create</button>
</form>
@if (ViewBag.Errors != null)
{
    <div class="errors mt--5">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li class="text-danger">@error</li>
            }
        </ul>
    </div>
}
