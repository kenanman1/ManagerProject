@model UserViewModel
@{
    ViewBag.Title = "Profile";
}
@section BreadcrumbSection
    {
    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
}
<form class="create-person-form mt-5" method="post">
    <div class="row mb-3">
        <label asp-for="PersonName" class="col-sm-3 col-form-label">Person Name</label>
        <div class="col-sm-9">
            <input class="form-control capitalize" asp-for="PersonName">
        </div>
    </div>
    <div class="row mb-3 mt-5">
        <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Email">
        </div>
    </div>
    <button type="button" class="btn btn-success">Change Name</button>
    <button type="button" class="btn btn-primary">Change Email</button>
</form>
